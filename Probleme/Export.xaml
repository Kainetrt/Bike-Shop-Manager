<Window x:Class="Probleme.Export"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Probleme"
        mc:Ignorable="d"
        Title="Export" Height="450" Width="800">
    <Window.Resources>
        <BitmapImage x:Key="BDD" UriSource="BDD.png"/>
    </Window.Resources>
    <Grid>
        <Button x:Name="XMLButton" Content="XML" HorizontalAlignment="Left" Margin="136,166,0,0" VerticalAlignment="Top" Width="116" Click="XML" Height="78"/>
        <Button x:Name="JSONButton" Content="JASON" HorizontalAlignment="Left" Margin="487,166,0,0" VerticalAlignment="Top" Width="161" Click="JSONEXPORTATION" Height="78"/>
        <Label x:Name="LabelJASON" Content="Exportation de la BDD en .json terminé" HorizontalAlignment="Left" Margin="466,126,0,0" VerticalAlignment="Top" Width="229"/>
        <Label x:Name="LabelXML" Content="Exportation de la BDD en .xml terminé" HorizontalAlignment="Left" Margin="95,126,0,0" VerticalAlignment="Top" Width="240"/>
        <Image Canvas.Left="315" Canvas.Top="31" Source="{StaticResource ResourceKey=BDD}" Margin="288,219,336.6,52"/>
    </Grid>
</Window>
